ARCH = $(shell uname -m)
RC = $(ARCH)
BIT32 = i686
BIT64 = x86_64

WORKDIR = `pwd`

CC = gcc
CXX = g++
AR = ar
LD = g++
WINDRES = windres

INC = 
CFLAGS = -Wall -fexceptions
RESINC = 
LIBDIR = 
LIB = 
LDFLAGS = 

ifeq ($(RC), $(BIT32))
	LIBDIR = -Llib/linux_x86
else
    LIBDIR = -Llib/linux_x64
endif

INC_RELEASE = $(INC) -Iinclude
CFLAGS_RELEASE = $(CFLAGS) -O2
RESINC_RELEASE = $(RESINC)
RCFLAGS_RELEASE = $(RCFLAGS)
LIBDIR_RELEASE = $(LIBDIR)
LIB_RELEASE = $(LIB)-ldl -lanychatsign
LDFLAGS_RELEASE = $(LDFLAGS) -s -Wl,-rpath .
OBJDIR_RELEASE = obj/Release
DEP_RELEASE = 
OUT_RELEASE = ./linux/Release/anychatsign

OBJ_RELEASE = $(OBJDIR_RELEASE)/anychatsign.o

all: release

clean: clean_release

before_release: 
	test -d ./linux/Release || mkdir -p ./linux/Release
	test -d $(OBJDIR_RELEASE) || mkdir -p $(OBJDIR_RELEASE)

after_release: 

release: before_release out_release after_release

out_release: before_release $(OBJ_RELEASE) $(DEP_RELEASE)
	$(LD) $(LIBDIR_RELEASE) -o $(OUT_RELEASE) $(OBJ_RELEASE)  $(LDFLAGS_RELEASE) $(LIB_RELEASE)

$(OBJDIR_RELEASE)/anychatsign.o: anychatsign.cpp
	$(CXX) $(CFLAGS_RELEASE) $(INC_RELEASE) -c anychatsign.cpp -o $(OBJDIR_RELEASE)/anychatsign.o

clean_release: 
	rm -f $(OBJ_RELEASE) $(OUT_RELEASE)
	rm -rf ../../linux/Release
	rm -rf $(OBJDIR_RELEASE)

.PHONY: before_release after_release clean_release

